<Window x:Class="SkipTheWaiterv3.Homepage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SkipTheWaiterv3"
        mc:Ignorable="d"
        Title="Homepage" Height="450" Width="800" SizeToContent="WidthAndHeight">
    <Grid x:Name="grid1">
        <Rectangle HorizontalAlignment="Left" Height="307" Margin="119,79,0,0" Stroke="Black" VerticalAlignment="Top" Width="572" Fill="Black" Opacity="0.1"/>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Margin="0,40,0,73" Width="97">
            <Button Content="Drinks" Height="50"></Button>
            <Button Content="Appetizers" Height="50"></Button>
            <Button Content="Soups and Salads" Height="50"></Button>
            <Button Content="Sandwiches" Height="50"></Button>
            <Button Content="Entrees" Height="50"></Button>
            <Button Content="Dessert" Height="50"></Button>
        </StackPanel>

        <Button Content="Call For Help" Margin="0,356,703,48"/>
        <Frame x:Name="Menu" Margin="102,40,0,48"></Frame>
        <Image HorizontalAlignment="Left" Height="67" Margin="135,85,0,0" VerticalAlignment="Top" Width="52" RenderTransformOrigin="0.5,0.5" Source="/orangejuice.jpg" Stretch="Fill">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.098"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Label Content="Citrus " HorizontalAlignment="Left" Margin="200,124,0,0" VerticalAlignment="Top" FontStyle="Italic"/>
        <Button x:Name="btnJuice" Content="Add" HorizontalAlignment="Center" Height="30" Margin="0,98,0,0" VerticalAlignment="Top" Click="juiceClick"/>
        <Label Content="HCI Bistro" HorizontalAlignment="Left" Margin="355,40,0,0" VerticalAlignment="Top" FontSize="24" FontFamily="Century Gothic" FontWeight="Bold"/>
        <Label Content="Orange juice       $4.99" HorizontalAlignment="Left" Margin="200,95,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Button x:Name="btnGuin" Content="Add" HorizontalAlignment="Left" Height="30" Margin="648,0,0,0" VerticalAlignment="Center" Click="guniess_click"/>

        <Image HorizontalAlignment="Left" Height="64" Margin="444,86,0,0" VerticalAlignment="Top" Width="52" RenderTransformOrigin="0.5,0.5" Source="/coke.jpg" Stretch="Fill">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.098"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Label Content="Coke       $2.99" HorizontalAlignment="Left" Margin="503,95,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Button x:Name="btnCola" Content="Add" HorizontalAlignment="Left" Height="30" Margin="648,98,0,0" VerticalAlignment="Top" Click="coke_click"/>
        <Label Content="Sugar, Cocoa Flavor " HorizontalAlignment="Left" Margin="503,116,0,0" VerticalAlignment="Top" FontStyle="Italic"/>
        <Label Content="Lemon, Beefeater gin, vermouth" HorizontalAlignment="Left" Margin="200,235,0,0" VerticalAlignment="Top" FontStyle="Italic"/>
        <Label Content="Martini          $9.99" HorizontalAlignment="Left" Margin="200,0,0,0" VerticalAlignment="Center" FontWeight="Bold"/>
        <Image HorizontalAlignment="Left" Height="67" Margin="135,203,0,0" VerticalAlignment="Top" Width="52" RenderTransformOrigin="0.5,0.5" Source="/martini.jpeg" Stretch="Fill">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.098"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Button x:Name="btnMartini" Content="Add" HorizontalAlignment="Center" Height="30" Margin="0,205,0,0" VerticalAlignment="Top" Click="martini_click"/>
        <Label Content="Guiness       $8.99" HorizontalAlignment="Left" Margin="503,202,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Label Content="Citrus " HorizontalAlignment="Left" Margin="513,235,0,0" VerticalAlignment="Top" FontStyle="Italic"/>
        <Image HorizontalAlignment="Left" Height="67" Margin="451,206,0,0" VerticalAlignment="Top" Width="52" RenderTransformOrigin="0.5,0.5" Source="/perfect-guinness-header.jpg" Stretch="Fill">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.098"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>

        <Rectangle HorizontalAlignment="Center" Height="35" Stroke="Black" VerticalAlignment="Top" Width="800" Fill="#FFD0CECE"/>
        <Rectangle HorizontalAlignment="Left" Height="346" Margin="696,40,0,0" Stroke="Black" VerticalAlignment="Top" Width="104"/>
        <Label Content="Bill" HorizontalAlignment="Left" Margin="729,47,0,0" VerticalAlignment="Top"/>




    </Grid>
</Window>
